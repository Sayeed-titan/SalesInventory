@model SalesInventoryV2.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h2>Delete Product</h2>
    <hr />

    <div class="alert alert-danger">
        <h4><i class="bi bi-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this product? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h4>Product to be Deleted</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product Name</dt>
                <dd class="col-sm-9"><strong>@Model.ProductName</strong></dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category.CategoryName</dd>

                <dt class="col-sm-3">Unit Price</dt>
                <dd class="col-sm-9">$@Model.UnitPrice.ToString("N2")</dd>

                <dt class="col-sm-3">Stock Quantity</dt>
                <dd class="col-sm-9">@Model.StockQuantity units</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-3">Created Date</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Yes, Delete This Product
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> No, Cancel
                </a>
            </form>
        </div>
    </div>
</div>