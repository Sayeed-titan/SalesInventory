@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-1 text-danger">
            <i class="bi bi-exclamation-triangle"></i>
        </h1>
        <h1 class="display-4">Oops! An Error Occurred</h1>
        <p class="lead">Something went wrong while processing your request.</p>
        
        @if (Model?.ShowRequestId ?? false)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> @Model.RequestId
            </p>
        }
        
        <hr class="my-4">
        
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
            <i class="bi bi-house"></i> Go to Home
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Go Back
        </a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">