@model IEnumerable<SalesInventoryV1.Models.Product>

@{
    ViewData["Title"] = "Low Stock Report";
}

<div class="container mt-4">
    <h2>
        <i class="bi bi-exclamation-triangle text-warning"></i> Low Stock Report
    </h2>
    <p class="text-muted">Products at or below their reorder level</p>
    <hr />

    @if (Model.Any())
    {
        <div class="alert alert-warning">
            <strong><i class="bi bi-info-circle"></i> Notice:</strong>
            There are <strong>@Model.Count()</strong> products that need restocking.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Current Stock</th>
                        <th>Reorder Level</th>
                        <th>Shortage</th>
                        <th>Unit Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.OrderBy(p => p.StockQuantity))
                    {
                        var shortage = product.ReorderLevel - product.StockQuantity;
                        <tr class="@(product.StockQuantity == 0 ? "table-danger" : "")">
                            <td>
                                <strong>@product.ProductName</strong>
                                @if (product.StockQuantity == 0)
                                {
                                    <span class="badge bg-danger ms-2">OUT OF STOCK</span>
                                }
                            </td>
                            <td>@product.Category.CategoryName</td>
                            <td>
                                <span class="badge bg-danger fs-6">@product.StockQuantity</span>
                            </td>
                            <td>@product.ReorderLevel</td>
                            <td>
                                <span class="text-danger fw-bold">@shortage units</span>
                            </td>
                            <td>$@product.UnitPrice.ToString("N2")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductId" 
                                   class="btn btn-sm btn-primary" title="Update Stock">
                                    <i class="bi bi-pencil"></i> Update
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-secondary">
                        <td colspan="7">
                            <strong>Total Low Stock Items:</strong> @Model.Count()
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <h4><i class="bi bi-check-circle"></i> All Good!</h4>
            <p class="mb-0">All products are adequately stocked. No items below reorder level.</p>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Products
        </a>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>
</div>